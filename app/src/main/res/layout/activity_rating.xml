<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:theme="@style/AppTheme2">
    <ImageButton
        android:id="@+id/back_btn_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="#fff"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            xmlns:android="http://schemas.android.com/apk/res/android">


            <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/constraintLayout_inner_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/Post_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:text="@string/post_review_for"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/school_name_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:text="@string/komal_day_care_service_and_pre_nursery"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:autofillHints="fullname"
                    app:layout_constraintStart_toStartOf="@+id/Post_review"
                    app:layout_constraintTop_toBottomOf="@+id/Post_review" />

                <TextView
                    android:id="@+id/security_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/security"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/school_name_rating"
                    app:layout_constraintTop_toBottomOf="@+id/school_name_rating" />

                <RatingBar
                    android:id="@+id/rating_security_input"
                    style="@style/Base.Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="1"
                    app:layout_constraintStart_toStartOf="@+id/security_rating"
                    app:layout_constraintTop_toBottomOf="@+id/security_rating"
                    />

                <TextView
                    android:id="@+id/Qualified_staff_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/qualified_staff"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/security_rating"
                    app:layout_constraintTop_toBottomOf="@+id/rating_security_input" />

                <RatingBar
                    android:id="@+id/Qualified_staff_rating_input"
                    style="@style/Base.Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="1"
                    app:layout_constraintStart_toStartOf="@+id/Qualified_staff_rating"
                    app:layout_constraintTop_toBottomOf="@+id/Qualified_staff_rating" />

                <TextView
                    android:id="@+id/infrastructure_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/infrastructure"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/Qualified_staff_rating"
                    app:layout_constraintTop_toBottomOf="@+id/Qualified_staff_rating_input" />

                <RatingBar
                    android:id="@+id/infrastructure_rating_input"
                    style="@style/Base.Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="1"
                    app:layout_constraintStart_toStartOf="@+id/infrastructure_rating"
                    app:layout_constraintTop_toBottomOf="@+id/infrastructure_rating" />

                <TextView
                    android:id="@+id/curriculum_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/curriculum"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/infrastructure_rating"
                    app:layout_constraintTop_toBottomOf="@+id/infrastructure_rating_input" />

                <RatingBar
                    android:id="@+id/curriculum_rating_input"
                    style="@style/Base.Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="1"
                    app:layout_constraintStart_toStartOf="@+id/curriculum_rating"
                    app:layout_constraintTop_toBottomOf="@+id/curriculum_rating" />

                <EditText
                    android:id="@+id/how_do_you_feel_about_school"
                    android:layout_width="0dp"
                    android:layout_height="156dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/ic_form_background"
                    android:hint="@string/how_do_you_feel_about_the_school"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/curriculum_rating_input"
                    app:layout_constraintTop_toBottomOf="@+id/curriculum_rating_input" />
                <Button
                    android:id="@+id/btn_submit_review"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorAccent"
                    android:text="@string/submit_review"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintStart_toStartOf="@id/how_do_you_feel_about_school"
                    app:layout_constraintTop_toBottomOf="@+id/how_do_you_feel_about_school"/>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </FrameLayout>
</LinearLayout>