<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_listing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/your_location"
        android:textColor="#616161"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/spinner_listhelper"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_mapview"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_rounded_button_white"
        android:drawableEnd="@drawable/ic_map_icon"
        android:drawablePadding="4dp"
        android:minWidth="64dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/mapview"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/signup_login"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/signup_login"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:src="@drawable/ic_logo_button"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mapview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_mapview"
        android:contentDescription="@string/signup_loginin"/>

    <android.widget.Spinner
        android:id="@+id/spinner_listhelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:dropDownWidth="300dip"
        android:dropDownVerticalOffset="40dp"
        android:foregroundTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mapview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_blue_textviewbg"
        android:paddingStart="16dp"
        android:paddingTop="2dp"
        android:paddingEnd="16dp"
        android:paddingBottom="2dp"
        android:text="Preschool"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/spinner_listhelper"
        app:layout_constraintTop_toBottomOf="@+id/spinner_listhelper" />

    <!-- <include
         android:id="@+id/include"
         layout="@layout/school_info_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         app:layout_constraintEnd_toEndOf="@+id/signup_login"
         app:layout_constraintStart_toStartOf="@+id/spinner_listhelper"
         app:layout_constraintTop_toBottomOf="@+id/textView">

     </include>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </android.support.v7.widget.RecyclerView>





</android.support.constraint.ConstraintLayout>
