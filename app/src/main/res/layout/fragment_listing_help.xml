<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/progressBar_mainlayout"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/your_location"
        android:textColor="#90838386"
        android:textSize="12sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="@+id/spinner_listhelper"
        app:layout_constraintTop_toTopOf="parent" />


    <android.widget.Spinner
        android:id="@+id/spinner_listhelper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:dropDownWidth="wrap_content"
        android:dropDownVerticalOffset="40dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mapview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <Button
        android:id="@+id/btn_mapview"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_rounded_button"
        android:drawableEnd="@drawable/ic_map_icon"
        android:drawablePadding="4dp"
        android:fontFamily="@font/montserrat_regular"
        android:minWidth="64dp"
        android:paddingStart="12dp"
        android:letterSpacing="0.05"
        android:paddingEnd="12dp"
        android:text="@string/mapview"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/signup_login"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/signup_login"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:contentDescription="@string/signup_loginin"
        android:src="@drawable/ic_logo_button"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mapview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_mapview" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_blue_textviewbg"
        android:paddingStart="16dp"
        android:paddingTop="2dp"
        android:paddingEnd="16dp"
        android:paddingBottom="2dp"
        android:text="Preschool"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/spinner_listhelper" />

    <!-- <include
         android:id="@+id/include"
         layout="@layout/school_info_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         app:layout_constraintEnd_toEndOf="@+id/signup_login"
         app:layout_constraintStart_toStartOf="@+id/spinner_listhelper"
         app:layout_constraintTop_toBottomOf="@+id/textView">

     </include>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signup_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_listhelper"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

    </android.support.v7.widget.RecyclerView>




</android.support.constraint.ConstraintLayout>
