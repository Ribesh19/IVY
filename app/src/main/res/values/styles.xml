<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="colorAccent">@color/yellow</item>- -->
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme3" parent="@android:style/Theme.Translucent">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

    </style>

    <style name="AppTheme4" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>


    <style name="fbbutton" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#3b5998</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>



    <!--<style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>


    </style>-->

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="tabTextAppearance">@color/grey2</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/montserrat_bold2</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="AppTheme_withtransition" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
       <!-- <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>-->
    </style>



</resources>
